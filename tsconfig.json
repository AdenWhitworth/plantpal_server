{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,  // Ensure TypeScript doesn't output files during tests
    "isolatedModules": true  // Helps with module boundaries
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

  