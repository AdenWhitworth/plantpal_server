{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "typedocOptions": {
    "entryPoints": [
      "src/*.ts"
    ],
    "out": "docs/typedoc"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

  